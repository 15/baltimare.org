        </div>
        <div class="flex flex-col items-center gap-x-2 lg:gap-x-4">
          <Image src={rarapony} alt="Rarapony" width="200" class="rounded-lg" 
          style="filter: drop-shadow(0 2px 2px #000)" />
          <div class="flex flex-col text-center">
            <div class="text-sm lg:text-xl font-semibold -mb-1 whitespace-nowrap">Rarapony</div>
            <div class="text-xs lg:text-sm whitespace-nowrap">Backend development</div>
          </div>
        </div>
        <div class="flex flex-col items-center gap-x-2 lg:gap-x-4">
          <Image src={marble} alt="Rarapony" width="200" class="rounded-lg" 
          style="filter: drop-shadow(0 2px 2px #000)" />
          <div class="flex flex-col text-center">
            <div class="text-sm lg:text-xl font-semibold -mb-1 whitespace-nowrap">Marble</div>
            <div class="text-xs lg:text-sm whitespace-nowrap">Art assets</div>
          </div>
        </div>
        <div class="flex flex-col items-center gap-x-2 lg:gap-x-4">
          <Image src={amblearbiter} alt="Rarapony" width="200" class="rounded-lg" 
          style="filter: drop-shadow(0 2px 2px #000)" />
          <div class="flex flex-col text-center">
            <div class="text-sm lg:text-xl font-semibold -mb-1 whitespace-nowrap">Amble Arbiter</div>
            <div class="text-xs lg:text-sm whitespace-nowrap">Art assets</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
